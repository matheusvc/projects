#!/usr/bin/env python
import sqlite3
import socket
import time
import datetime as dt
import base64


HOST = ''
PORT = 12999

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)

s.bind((HOST,PORT))
s.listen(10)

conn, addr = s.accept()
print('Conectado com', addr[0],':', str(addr[1]))

con = sqlite3.connect('edgedb')
c = con.cursor()

#c.execute('CREATE TABLE imagebank (id INTEGER PRIMARY KEY AUTOINCREMENT, picture BLOB)') #TABELA J√Å CRIADA


while True:
    
    data = conn.recv(8192).decode('utf-8')
    archive = base64.b64decode(data)
    print('archive type =', type(archive))
    #image_result = open('teste_img2.png', 'wb')
    #image_result.write(archive)
    c.execute('INSERT INTO imagebank (picture) VALUES (?)' , [archive])
    con.commit()
    numba += 1

    if not data:
        break
    print('Servidor recebeu :', repr(data))
    
    
    

s.close()
