#!/usr/bin/env python
import sqlite3
import socket
import time
import datetime as dt
import base64
import pickle
import os


HOST = ''
PORT = 12999

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)

s.bind((HOST,PORT))
s.listen(10)

conn, addr = s.accept()
print('Conectado com', addr[0],':', str(addr[1]))

con = sqlite3.connect('imagesdb.db')
c = con.cursor()

#c.execute('CREATE TABLE imagesdb (id INTEGER PRIMARY KEY AUTOINCREMENT, picturepath TEXT, timestamp TEXT )') #TABELA J√Å CRIADA

i = 0

while True:
    numba = str(i)
    data = conn.recv(4432).decode('utf-8')
    print('data recv = ', data)
    archive = base64.b64decode(data)
    print('archive type =', type(archive))
    print('archive = ', archive)
    name = 'imagem'+numba+'.png'
    with open(name, "wb") as image_file:
        image_file.write(archive)
    thepath = str(os.getcwd()+'/'+name)
    hora = str(dt.datetime.now().strftime('%H:%M:%S'))
    c.execute('INSERT INTO imagesdb (picturepath) VALUES (?)' , [thepath])
    c.execute('INSERT INTO imagesdb (timestamp) VALUES(?)', [hora])
    con.commit()
    i += 1

    if not data:
        break
    

s.close()
