import time
import serial
import tkinter as tk
from tkinter import ttk
import threading

ser = serial.Serial(
              
    port='/dev/ttyUSB0',
    baudrate = 19200,
    parity=serial.PARITY_NONE,
    stopbits=serial.STOPBITS_ONE,
    bytesize=serial.EIGHTBITS,
    timeout=1
    )

lock = threading.Lock()

def checking_signal(lock):
    
    while True:
        
        with lock:
            
            print('Lock Acquired')
            x = ser.readline()
            y = x.rstrip()
            z = y.decode('utf-8')
            print(z)
            ser.write(str.encode('AT+CSQ\r'))
            time.sleep(5)
            if (z.startswith("+CSQ")):
                a = int(z[5])
                if a >= 3:
                    print('Qualidade do sinal', z[5], 'Ã© suficiente')
                    Signal = True
                    #read_mt_message()
                    lock.release()
                    time.sleep(6)
                else:
                    print('Buscando Sinal...')
                    time.sleep(0.5)


                    
t = threading.Thread(target = checking_signal, args = (lock,))
t.start()
t.join()
